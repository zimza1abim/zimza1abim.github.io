---
// 파일 위치가 src/components/navbar/ 안에 있다면 ../container.astro
// src/components/ 바로 아래라면 ./container.astro 로 수정하세요.
import Container from "../container.astro";

// ▼▼▼ 1. 유저가 제공한 4단 구조 데이터 ▼▼▼
const menuitems = [
  {
    title: "About",
    path: "/about",
  },
  {
    title: "Blog",
    path: "/blog",
    // 4개의 컬럼을 가진 자식들
    children: [
      {
        title: "Explore",
        items: [
          { title: "All Posts", path: "/blog" },
        ],
      },
      {
        title: "Study : SK Shieldus",
        items: [
          { title: "AppSec", path: "/category/appsec" },
          { title: "Cloud", path: "/category/cloud" },
          { title: "Linux/Ubuntu", path: "/category/linux-ubuntu" },
          { title: "Python", path: "/category/python" },
          { title: "Sec Control", path: "/category/security-control" },
          { title: "Vulnerability", path: "/category/security-vulnerability" },
          { title: "White Hat", path: "/category/white-hat" },
          { title: "Project", path: "/category/project" },
        ],
      },
      {
        title: "Obsidian",
        items: [
          { title: "Obsidian", path: "/category/obsidian" },
        ],
      },
      {
        title: "Self-hosting",
        items: [
          { title: "Self-Hosting", path: "/category/self-hosting" },
          { title: "Crowdsec", path: "/category/crowdsec" },
          { title: "Bitwarden", path: "/category/bitwarden" },
        ],
      },
      {
        title: "Tech",
        items: [
          { title: "Tech", path: "/category/tech" },
        ],
      },
    ],
  },
  {
    title: "Music",
    path: "/music",
  },
  {
    title: "Scribble",
    path: "/personal",
  },
  {
    title: "Playground",
    path: "/reserve",
  },
];
---

<Container>
  <nav class="sticky top-4 z-50 bg-white/70 backdrop-blur-md border border-white/40 shadow-sm shadow-rose-100/20 rounded-full px-6 transition-all duration-300">
    <div class="flex flex-wrap justify-between items-center py-3">
      
      <a href="/" class="font-bold text-lg flex items-center gap-2 text-stone-600 hover:text-rose-500 transition-colors group z-50">
        <span class="bg-gradient-to-br from-rose-400 to-rose-500 text-white w-8 h-8 flex items-center justify-center rounded-full text-sm shadow-lg shadow-rose-200 group-hover:scale-110 transition-transform">Z</span>
        <span class="tracking-tight">Zimza1abim<span class="text-rose-400">.log</span></span>
      </a>

      <div class="block lg:hidden z-50">
        <button id="menu-btn" aria-label="Toggle Menu" class="text-stone-500 hover:text-rose-500 focus:outline-none p-2">
           <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
             <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
           </svg>
        </button>
      </div>

      <div class="hidden lg:flex items-center">
        <ul class="flex flex-col lg:flex-row lg:gap-1 items-center">
          {
            menuitems.map((item) => (
              <>
                {item.children ? (
                  /* [드롭다운/메가 메뉴] */
                  <li class="relative group h-full flex items-center" aria-haspopup="true">
                    <button class="flex items-center gap-1 py-2 px-4 rounded-full text-sm text-stone-500 hover:text-rose-500 hover:bg-rose-50 font-medium transition-all cursor-default">
                      <span>{item.title}</span>
                      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2.5" stroke="currentColor" class="w-3 h-3 group-hover:rotate-180 transition-transform duration-300">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 8.25l-7.5 7.5-7.5-7.5" />
                      </svg>
                    </button>
                    
                    {/* 투명 다리 (마우스 끊김 방지) */}
                    <div class="absolute top-[100%] lg:-left-20 pt-4 invisible opacity-0 translate-y-2 group-hover:visible group-hover:opacity-100 group-hover:translate-y-0 transition-all duration-300 ease-out z-50">
                      
                      {/* [수정 포인트] 
                          w-[800px]: 4단 컬럼을 위해 너비를 넓힘
                          grid-cols-4: 3단 -> 4단 그리드로 변경
                      */}
                      <div class="w-[850px] bg-white/95 backdrop-blur-xl shadow-xl shadow-rose-100/50 border border-white rounded-[2rem] p-8">
                        <div class="grid grid-cols-4 gap-8">
                          {item.children.map((column) => (
                            <div class="flex flex-col gap-3">
                              {/* 컬럼 제목 */}
                              <h3 class="font-bold text-rose-400 text-xs uppercase tracking-widest border-b border-rose-100 pb-2 mb-1 truncate">
                                {column.title}
                              </h3>
                              {/* 하위 링크들 */}
                              {column.items && column.items.map((link) => (
                                <a 
                                  href={link.path} 
                                  class="text-sm text-stone-500 hover:text-rose-500 hover:translate-x-1 transition-all font-light block py-0.5"
                                >
                                  {link.title}
                                </a>
                              ))}
                            </div>
                          ))}
                        </div>
                      </div>

                    </div>
                  </li>
                ) : (
                  /* [일반 메뉴] */
                  <li>
                    <a href={item.path} class="flex py-2 px-4 rounded-full text-sm text-stone-500 hover:text-rose-500 hover:bg-rose-50 font-medium transition-all">
                      {item.title}
                    </a>
                  </li>
                )}
              </>
            ))
          }
        </ul>
      </div>

      <div id="mobile-menu" class="hidden lg:hidden absolute top-full left-0 w-full bg-white/95 backdrop-blur-xl border-t border-stone-100 shadow-xl rounded-b-[2rem] p-6 flex-col gap-4 z-40 mt-2 h-[80vh] overflow-y-auto">
        {
          menuitems.map((item) => (
            <div class="flex flex-col">
              {/* 1차 메뉴 제목 */}
              <a 
                href={item.path} 
                class="text-lg font-bold text-stone-800 hover:text-rose-500 py-2 border-b border-rose-50"
              >
                {item.title}
              </a>
              
              {/* 2차 메뉴 (컬럼별로 루프) */}
              {item.children && (
                <div class="pl-4 flex flex-col gap-4 mt-3 mb-2">
                   {item.children.map(column => (
                     <div class="flex flex-col gap-2">
                       {/* 컬럼 소제목 (예: Study : SK Shieldus) */}
                       <span class="text-xs font-bold text-rose-400 uppercase tracking-widest bg-rose-50 inline-block px-2 py-1 rounded w-fit">
                         {column.title}
                       </span>
                       
                       {/* 실제 링크들 */}
                       <div class="flex flex-col gap-2 pl-2 border-l-2 border-rose-100">
                         {column.items.map(link => (
                           <a href={link.path} class="text-sm text-stone-500 hover:text-rose-500 block">
                             {link.title}
                           </a>
                         ))}
                       </div>
                     </div>
                   ))}
                </div>
              )}
            </div>
          ))
        }
      </div>

    </div>
  </nav>
</Container>

<script>
  const menuBtn = document.getElementById('menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');

  if (menuBtn && mobileMenu) {
    menuBtn.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
      mobileMenu.classList.toggle('flex');
    });
  }
</script>